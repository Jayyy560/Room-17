rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() { return request.auth != null; }
    function isSelf(uid) { return isSignedIn() && request.auth.uid == uid; }
    function isAdmin() {
      return isSignedIn() && request.auth.token.email in ['jayantvig30@gmail.com'];
    }
    function arenaDoc(arenaId) {
      return get(/databases/$(database)/documents/arenas/$(arenaId));
    }
    function arenaActive(arenaId) {
      return arenaDoc(arenaId).data.isActive == true;
    }
    function inArenaWindow(arenaId) {
      return request.time >= arenaDoc(arenaId).data.startTime
        && request.time <= arenaDoc(arenaId).data.endTime;
    }

    match /users/{uid} {
      allow read: if isSignedIn();
      allow create: if isSelf(uid)
        && request.resource.data.gender is string
        && request.resource.data.dateOfBirth is string;
      allow update, delete: if isSelf(uid);
    }

    match /arenas/{arenaId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isAdmin();

      match /activeUsers/{uid} {
        allow read: if isSignedIn();
        allow create: if isSelf(uid)
          && arenaActive(arenaId)
          && inArenaWindow(arenaId)
          && request.resource.data.uid == request.auth.uid
          && request.resource.data.signalsRemaining == 3;
        allow update: if isSelf(uid)
          && request.resource.data.signalsRemaining is int
          && request.resource.data.signalsRemaining >= 0
          && request.resource.data.signalsRemaining <= resource.data.signalsRemaining;
        allow delete: if isSelf(uid);
      }
    }

    match /signals/{signalId} {
      allow create: if isSignedIn()
        && request.resource.data.arenaId is string
        && request.resource.data.senderId == request.auth.uid
        && request.resource.data.receiverId is string
        && request.resource.data.createdAt != null
        && arenaActive(request.resource.data.arenaId)
        && inArenaWindow(request.resource.data.arenaId)
        && exists(/databases/$(database)/documents/arenas/$(request.resource.data.arenaId)/activeUsers/$(request.auth.uid))
        && get(/databases/$(database)/documents/arenas/$(request.resource.data.arenaId)/activeUsers/$(request.auth.uid)).data.signalsRemaining > 0;

      allow read: if isSignedIn() && (request.auth.uid == resource.data.receiverId || request.auth.uid == resource.data.senderId);
      allow delete: if isSignedIn() && (request.auth.uid == resource.data.receiverId || request.auth.uid == resource.data.senderId);
    }

    match /matches/{matchId} {
      allow read, update: if isSignedIn() && request.auth.uid in resource.data.participants;
      allow create: if isSignedIn()
        && request.resource.data.arenaId is string
        && request.auth.uid in request.resource.data.participants;

      match /messages/{messageId} {
        allow read, create: if isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/matches/$(matchId)).data.participants;
      }
    }

    match /reports/{reportId} {
      allow create: if isSignedIn();
      allow read: if false;
    }
  }
}
